{
  "manifest_version": 3,
  "name": "Plugin Controller",
  "version": "1.0",
  "description": "Enable or disable other Chrome extensions.",
  "permissions": ["management"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "enable-all": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "MacCtrl+Shift+E"
      },
      "description": "Enable All Extensions"
    },
    "disable-all": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "MacCtrl+Shift+D"
      },
      "description": "Disable All Extensions"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["background.js", "popup.js"]
    }
]
}
